<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/479c6b02c4.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><%= link_to user_signed_in? ? user_path(current_user) : root_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-house"></i> Home
              </li><% end %>
              <% if user_signed_in? %>
                <li><%= link_to users_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-users"></i> Users
                </li><% end %>
                <li><%= link_to books_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-book-open"></i> Books
                </li><% end %>
                <li><%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log out
                </li><% end %>
              <% else %>
                <li><%= link_to about_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-link"></i> About
                </li><% end %>
                <li><%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i> Sign up
                </li><% end %>
                <li><%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                </li><% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <% flash.each do |message_type, message| %>
        <div class="flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </main>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

  </body>

</html>
